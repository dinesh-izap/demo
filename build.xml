<?xml version="1.0" encoding="UTF-8"?>
<project name="core-app" default="main">
  <target name="main" depends="lint" />
  <target name="lint">
    <apply executable="php" failonerror="true">
     <arg value="-l" />
      <fileset dir="${basedir}">
        <include name="**/*.php" />
      <modified />
      </fileset>
   </apply>
 </target>
</project>
